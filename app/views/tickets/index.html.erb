<h1>Tickets</h1>
<div class="row">
  <div class="col-md-12 align-self-center">
    <table class="table">
      <thead>
      <% TicketPresenter.table_fields.each do |header| %>
        <th><%= header.to_s.camelize %></th>
      <% end %>
      <th>Action</th>
      </thead>
      <tbody>
      <% @tickets.each do |ticket| %>
        <tr>
          <% present ticket do |t| %>
            <% TicketPresenter.table_fields.each do |field| %>
              <td><%= t.public_send field %></td>
            <% end %>
            <td><%= link_to 'Show', t.url %></td>
          <% end %>
        </tr>
      <% end %>
      </tbody>
    </table>
    <div class="row">
      <div class="col-md-12">
        <%= page_entries_info @tickets, entry_name: 'ticket' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <%= paginate(@tickets) %>
      </div>
    </div>
  </div>
</div>


